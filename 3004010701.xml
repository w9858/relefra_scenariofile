    <wait time="1.0" />
    <move obj_id="テレジア" position_id="left" x="0" x_move_type="MoveTo" time="0" wait="False" />
    <fade_in time="1.0" type="Default" wait="True" />
    <msg speaker="子供の声" text="あっ、おかーさん！&#xA;今ね、あっちにおかーさんいた！" speaker_show="True" stop="True" voice="99043_01_0013" />
    <char_spine_animation obj_id="テレジア" face_anim_type="008_Facial_serious" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" />
    <msg speaker="テレジア" text="よし、案内しろ。" speaker_show="True" stop="True" voice="tr11007_01_0149" />
