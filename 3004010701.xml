    <create type="Character" obj_id="白虎" data_id="311007003" position_id="left" x="0" anchor="Bottom" />
    <msg speaker="新垣 歩" text="さ、着いたわよ。" speaker_show="True" stop="True" voice="na99003_01_0023" />
    <char_spine_animation obj_id="白虎" face_anim_type="005_Facial_sad" body_anim_type="13_Question" loop="True" to_idle="False" />
    <msg speaker="白虎" text="ん……？　何だここ？&#xA;迷子センターって書いてあるぞ！" speaker_show="True" stop="True" voice="bk11008_01_0143" />
