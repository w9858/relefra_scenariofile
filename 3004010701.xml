    <fade_out time="1.0" type="Default" wait="True" />
    <delete obj_id="テレジア" />
    <create type="Character" obj_id="白虎" data_id="311007003" position_id="left" x="0" anchor="Bottom" />
    <fade_in time="1.0" type="Default" wait="True" />
    <char_spine_animation obj_id="白虎" face_anim_type="005_Facial_sad" body_anim_type="13_Question" loop="True" to_idle="False" />
    <msg speaker="白虎" text="ん……？　テレ公？　坊主？" speaker_show="True" stop="True" voice="bk11008_01_0131" />
    <char_spine_animation obj_id="白虎" body_anim_type="07_ChestBothHands" loop="True" to_idle="False" />
    <msg speaker="白虎" text="……居ない。" speaker_show="True" stop="True" voice="bk11008_01_0132" />
    <char_spine_animation obj_id="白虎" face_anim_type="008_Facial_serious" body_anim_type="05_HipBothHands" loop="True" to_idle="False" />
    <msg speaker="白虎" text="くそー、テレ公！&#xA;どこに行きやがった？　おーい、テレ公！" speaker_show="True" stop="True" voice="bk11008_01_0133" />
    <msg speaker="白虎" text="花見場所の地図はテレ公が持ってるから、&#xA;あいつを捕まえないことには、花見にも行けない。" speaker_show="True" stop="True" voice="bk11008_01_0134" />
    <msg_window_show show="False" />
    <sound cue_name="Walk" />
    <move obj_id="白虎" position_id="left" x="200" x_move_type="MoveTo" time="0.8" wait="True" />
    <move obj_id="白虎" position_id="left" x="0" x_move_type="MoveTo" time="1.5" wait="True" />
    <char_spine_animation obj_id="白虎" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" />
    <msg speaker="白虎" text="おーい、テレ公！&#xA;どこだー？　白虎様はここだぞー！" speaker_show="True" stop="True" voice="bk11008_01_0135" />
    <msg_window_show show="False" />
    <msg speaker="新垣 歩" text="お嬢ちゃん、どうしたの？" speaker_show="True" stop="True" voice="na99003_01_0016" />
    <char_spine_animation obj_id="白虎" body_anim_type="05_HipBothHands" loop="True" to_idle="False" />
    <msg speaker="白虎" text="誰だお前は？　それから私は&#xA;お嬢ちゃんなんかじゃない！　白虎様だ！" speaker_show="True" stop="True" voice="bk11008_01_0136" />
    <char_spine_animation obj_id="新垣 歩" face_anim_type="002_Facial_smile" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" />
    <msg speaker="新垣 歩" text="そっか、ごめんね。白虎ちゃん。" speaker_show="True" stop="True" voice="na99003_01_0017" />
    <char_spine_animation obj_id="新垣 歩" face_anim_type="005_Facial_sad" body_anim_type="03_BackBothHands" loop="True" to_idle="False" />
    <msg speaker="新垣 歩" text="お姉さんはパトロール中のお巡りさんなんだけど、&#xA;あなたはここで何をしているの？" speaker_show="True" stop="True" voice="na99003_01_0018" />
    <char_spine_animation obj_id="白虎" face_anim_type="001_Facial_blink" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" />
    <msg speaker="白虎" text="テレ公を探してるんだよ！" speaker_show="True" stop="True" voice="bk11008_01_0137" />
    <char_spine_animation obj_id="新垣 歩" face_anim_type="008_Facial_serious" body_anim_type="13_Question" loop="True" to_idle="False" />
    <msg speaker="新垣 歩" text="テレ公……？&#xA;もしかして、迷子になっちゃったのかな？" speaker_show="True" stop="True" voice="na99003_01_0019" />
    <char_spine_animation obj_id="白虎" face_anim_type="008_Facial_serious" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" />
    <msg speaker="白虎" text="バカなことを言うな！&#xA;迷子になったのはテレ公の方だ！" speaker_show="True" stop="True" voice="bk11008_01_0138" />
    <char_spine_animation obj_id="白虎" body_anim_type="05_HipBothHands" loop="True" to_idle="False" />
    <msg speaker="白虎" text="この白虎様を迷子と勘違いするなんて、&#xA;日本の警察は何を考えてるんだ！" speaker_show="True" stop="True" voice="bk11008_01_0139" />
    <char_spine_animation obj_id="新垣 歩" face_anim_type="002_Facial_smile" body_anim_type="11_Point" loop="True" to_idle="False" />
    <msg speaker="新垣 歩" text="ごめんごめん。それじゃあ白虎ちゃんは、その&#xA;テレ公ちゃんとはぐれちゃったってことなのかな？" speaker_show="True" stop="True" voice="na99003_01_0020" />
    <char_spine_animation obj_id="白虎" face_anim_type="005_Facial_sad" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" />
    <msg speaker="白虎" text="そうだ。私がちょっと目を離した隙に、&#xA;居なくなりやがって……。" speaker_show="True" stop="True" voice="bk11008_01_0140" />
    <char_spine_animation obj_id="新垣 歩" face_anim_type="005_Facial_sad" body_anim_type="07_ChestBothHands" loop="True" to_idle="False" />
    <msg speaker="新垣 歩" text="そうだったのね。" speaker_show="True" stop="True" voice="na99003_01_0021" />
    <char_spine_animation obj_id="白虎" face_anim_type="008_Facial_serious" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" />
    <msg speaker="白虎" text="お前、警察ならテレ公を探し出せ！" speaker_show="True" stop="True" voice="bk11008_01_0141" />
    <char_spine_animation obj_id="新垣 歩" face_anim_type="002_Facial_smile" body_anim_type="13_Question" loop="True" to_idle="False" />
    <msg speaker="新垣 歩" text="それじゃあ……、お巡りさんと一緒に&#xA;来てくれる？" speaker_show="True" stop="True" voice="na99003_01_0022" />
    <char_spine_animation obj_id="白虎" face_anim_type="003_Facial_laugh" body_anim_type="05_HipBothHands" loop="True" to_idle="False" />
    <msg speaker="白虎" text="おう、さっさとテレ公を連れてこい。" speaker_show="True" stop="True" voice="bk11008_01_0142" />
