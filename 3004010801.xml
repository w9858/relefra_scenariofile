  <command>
    <Start />
    <sound type="Bgm" cue_name="Adv1" />
    <fade_out time="0.0" type="Default" wait="False" />
    <Comment comment="Wasabi店内" />
    <bg show="True" file="02_wasabimo_001" />
    <msg window_type="SystemMsg" text="ツキカゲメンバー全員で、&#xA;お花見に行くことが決定したすぐ後のこと……。" stop="True" />
    <msg_window_show show="False" />
    <fade_in time="0.5" type="Default" wait="True" />
    <telop text="Wasabi" in_time="0.5" show_time="1.0" out_time="0.5" wait="True" />
    <create obj_id="テレジア" data_id="311008003" position_id="left" x="-200" y="0" anchor="Bottom" />
    <create obj_id="青葉 初芽" data_id="311005005" position_id="left" x="200" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="テレジア" face_anim_type="015_Facial_poker" body_anim_type="02_Idle" loop="True" to_idle="False" force_end="False" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="002_Facial_smile" body_anim_type="02_Idle" loop="True" to_idle="False" force_end="True" />
    <msg speaker="テレジア" text="みんな凄い早さで出かけて行ってしまったな。" speaker_show="True" stop="True" voice="tr11007_01_0151" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="003_Facial_laugh" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="桜の季節は短いですからね。お花見は、&#xA;やると決まったらすぐに準備が必要なのです。" speaker_show="True" stop="True" voice="ah11005_01_0303" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="002_Facial_smile" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="食べ物の買い出しはごえちゃんたち、&#xA;場所取りの準備はメイちゃんたち。" speaker_show="True" stop="True" voice="ah11005_01_0304" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="003_Facial_laugh" body_anim_type="14_Positive" loop="False" to_idle="True" force_end="False" />
    <msg speaker="青葉 初芽" text="みんな行動が素早くて、頼もしい限りです。" speaker_show="True" stop="True" voice="ah11005_01_0305" />
    <Comment comment="不思議そうに" />
    <char_spine_animation obj_id="テレジア" face_anim_type="005_Facial_sad" body_anim_type="13_Question" loop="True" to_idle="False" force_end="False" />
    <msg speaker="テレジア" text="花を見るだけなのに、そんなに&#xA;大掛かりな支度が必要なのか……。" speaker_show="True" stop="True" voice="tr11007_01_0152" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="002_Facial_smile" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="テレちゃんと白虎ちゃんにとっては、&#xA;初めてのお花見ですからね。" speaker_show="True" stop="True" voice="ah11005_01_0306" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="003_Facial_laugh" body_anim_type="07_ChestBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="盛大なお花見にしたくて、&#xA;みんな張り切ってるんですよ。" speaker_show="True" stop="True" voice="ah11005_01_0307" />
    <char_spine_animation obj_id="テレジア" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" force_end="False" face_anim_type="002_Facial_smile" />
    <msg speaker="テレジア" text="それは有難いことだな。ところで日本の花見&#xA;というのは具体的に何をするんだ？" speaker_show="True" stop="True" voice="tr11007_01_0153" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="002_Facial_smile" body_anim_type="03_BackBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="ふふ、それは行って見てからのお楽しみ♪&#xA;と言いたいところですが……。" speaker_show="True" stop="True" voice="ah11005_01_0308" />
    <char_spine_animation obj_id="青葉 初芽" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="事前に少しだけ、お花見の楽しみ方を&#xA;教えてあげますね。" speaker_show="True" stop="True" voice="ah11005_01_0309" />
    <msg_window_show show="False" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="002_Facial_smile" body_anim_type="02_Idle" loop="True" to_idle="False" force_end="False" />
    <delete obj_id="テレジア" />
    <move obj_id="青葉 初芽" position_id="left" x="0" x_move_type="MoveTo" time="0.5" wait="True" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="003_Facial_laugh" body_anim_type="09_PutHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="桜というのは、木の枝いっぱいにピンク色の可愛い&#xA;お花が咲くのですが、これがとっても美しいんです。" speaker_show="True" stop="True" voice="ah11005_01_0310" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="008_Facial_serious" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="しかも、お花が満開になっている時は&#xA;とても短くて、あっと言う間に散ってしまう。" speaker_show="True" stop="True" voice="ah11005_01_0311" />
    <char_spine_animation obj_id="青葉 初芽" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="その、限られた時にしか見ることができない&#xA;美しさを楽しむのが、お花見なのです！" speaker_show="True" stop="True" voice="ah11005_01_0312" />
    <msg_window_show show="False" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="002_Facial_smile" body_anim_type="02_Idle" loop="True" to_idle="False" force_end="False" />
    <move obj_id="青葉 初芽" position_id="left" x="200" x_move_type="MoveTo" time="0.5" wait="True" />
    <create obj_id="テレジア" data_id="311008003" position_id="left" x="-200" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="テレジア" face_anim_type="005_Facial_sad" body_anim_type="13_Question" loop="True" to_idle="False" force_end="False" />
    <msg speaker="テレジア" text="花の美しさは理解できたが……&#xA;それほど情熱を持つほどの事だろうか……。" speaker_show="True" stop="True" voice="tr11007_01_0154" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="003_Facial_laugh" body_anim_type="05_HipBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="ふふ、百聞は一見にしかず。&#xA;こればかりは実際に見てみるのが一番ですよ。" speaker_show="True" stop="True" voice="ah11005_01_0313" />
    <char_spine_animation obj_id="テレジア" face_anim_type="008_Facial_serious" body_anim_type="15_Negative" loop="False" to_idle="True" force_end="False" />
    <msg speaker="テレジア" text="そうか……。今の所あまり&#xA;そそられる要素はなさそうだが……。" speaker_show="True" stop="True" voice="tr11007_01_0155" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="002_Facial_smile" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="あ、そうそう。お花見は花を見るだけの&#xA;イベントではないのですよ。" speaker_show="True" stop="True" voice="ah11005_01_0314" />
    <char_spine_animation obj_id="青葉 初芽" body_anim_type="09_PutHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="桜の木の下で、美味しいお弁当や、桜の季節&#xA;ならではの和菓子を楽しむのも、大切な要素です！" speaker_show="True" stop="True" voice="ah11005_01_0315" />
    <char_spine_animation obj_id="テレジア" face_anim_type="002_Facial_smile" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="テレジア" text="桜の季節ならではの和菓子？" speaker_show="True" stop="True" voice="tr11007_01_0156" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="003_Facial_laugh" body_anim_type="14_Positive" loop="False" to_idle="True" force_end="False" />
    <msg speaker="青葉 初芽" text="はい！　桜の木の下で食べる桜餅は&#xA;最高に美味しいですよ。" speaker_show="True" stop="True" voice="ah11005_01_0316" />
    <char_spine_animation obj_id="テレジア" face_anim_type="002_Facial_smile" body_anim_type="13_Question" loop="True" to_idle="False" force_end="False" />
    <msg speaker="テレジア" text="桜餅？　何だそれは？" speaker_show="True" stop="True" voice="tr11007_01_0157" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="002_Facial_smile" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="桜の花と同じ、薄いピンク色の&#xA;甘くて可愛い日本のお菓子ですよ。" speaker_show="True" stop="True" voice="ah11005_01_0317" />
    <char_spine_animation obj_id="テレジア" face_anim_type="008_Facial_serious" body_anim_type="14_Positive" loop="False" to_idle="True" force_end="False" />
    <msg speaker="テレジア" text="ごくり……。それは気になる。" speaker_show="True" stop="True" voice="tr11007_01_0158" />
    <char_spine_animation obj_id="青葉 初芽" body_anim_type="07_ChestBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="でしたらこれから、私と一緒に、&#xA;桜餅を作ってみませんか？" speaker_show="True" stop="True" voice="ah11005_01_0318" />
    <char_spine_animation obj_id="テレジア" body_anim_type="06_ChestLeftHand" loop="True" to_idle="True" force_end="False" face_anim_type="011_Facial_surprise" />
    <msg speaker="テレジア" text="手作りできる物なのか？" speaker_show="True" stop="True" voice="tr11007_01_0159" />
    <char_spine_animation obj_id="青葉 初芽" face_anim_type="003_Facial_laugh" body_anim_type="14_Positive" loop="False" to_idle="True" force_end="False" />
    <msg speaker="青葉 初芽" text="はい！ 手作りの桜餅を、桜の木の下で&#xA;食べるだなんて、きっと素敵な思い出になりますよ。" speaker_show="True" stop="True" voice="ah11005_01_0319" />
    <char_spine_animation obj_id="青葉 初芽" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" />
    <msg speaker="青葉 初芽" text="それでは早速、私のお家に来てください。" speaker_show="True" stop="True" voice="ah11005_01_0320" />
    <msg_window_show show="False" />
    <fade_out time="0.5" type="Default" wait="True" />
  </command>
</adv>