    <msg speaker="薩摩 しぶき" text="おーい、戻ったぞ、３人とも。" speaker_show="True" stop="True" voice="ss12003_01_0194" />
    <move obj_id="薩摩 しぶき" position_id="left" x="200" x_move_type="MoveTo" time="0.3" wait="True" />
    <create type="Character" anchor="Bottom" obj_id="轟 葉栖美" data_id="312004002" position_id="left" x="-200" />
    <char_spine_animation obj_id="轟 葉栖美" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" />
    <msg speaker="轟 葉栖美" text="あ、しぶきち。ヨモギさんとの話はもういいの？&#xA;てか、話ってなんだったの？" speaker_show="True" stop="True" voice="th12004_01_0133" />
    <char_spine_animation obj_id="薩摩 しぶき" body_anim_type="03_BackBothHands" loop="True" to_idle="False" />
    <msg speaker="薩摩 しぶき" text="まあ、後輩の面倒を引き続きしっかり見るようにとか、&#xA;そんなような話じゃ。" speaker_show="True" stop="True" voice="ss12003_01_0195" />
    <char_spine_animation obj_id="薩摩 しぶき" face_anim_type="008_Facial_serious" body_anim_type="15_Negative" loop="False" to_idle="False" />
    <msg speaker="薩摩 しぶき" text="そんなことより、訓練後の反省会を始めるぞ。&#xA;特にゆらは、課題が山積みじゃからのう。" speaker_show="True" stop="True" voice="ss12003_01_0196" />
    <delete obj_id="轟 葉栖美" />
    <delete obj_id="薩摩 しぶき" />
    <create type="Character" anchor="Bottom" obj_id="宗近 飛粋" data_id="312001002" position_id="left" x="-125" />
    <create type="Character" anchor="Bottom" obj_id="乱獅子 ゆら" data_id="312002002" position_id="left" x="125" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="005_Facial_sad" body_anim_type="05_HipBothHands" loop="True" to_idle="False" />
    <msg speaker="乱獅子 ゆら" text="へいへい…&#xA;たく、こっちの話はまだ終わってねーってのに。" speaker_show="True" stop="True" voice="ry12002_01_0177" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="002_Facial_smile" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" />
    <msg speaker="乱獅子 ゆら" text="ま、飛粋のおかげで今のアタシ様があるんだし、&#xA;それで良しってことにしとくかな。" speaker_show="True" stop="True" voice="ry12002_01_0178" />
    <char_spine_animation obj_id="宗近 飛粋" body_anim_type="14_Positive" loop="False" to_idle="False" />
    <msg speaker="宗近 飛粋" text="うん！　そういうことにしとこうよ、ゆらちゃん！" speaker_show="True" stop="True" voice="mh12001_01_0266" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="011_Facial_surprise" body_anim_type="15_Negative" loop="False" to_idle="False" />
    <msg speaker="乱獅子 ゆら" text="いや、お前が言うなっての…！" speaker_show="True" stop="True" voice="ry12002_01_0179" />
