    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="008_Facial_serious" body_anim_type="05_HipBothHands" force_end="True" loop="True" to_idle="False" />
    <char_spine_animation obj_id="轟 葉栖美" face_anim_type="002_Facial_smile" body_anim_type="04_HipLeftHand" force_end="True" loop="True" to_idle="False" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="015_Facial_poker" body_anim_type="13_Question" loop="True" to_idle="False" />
    <msg speaker="宗近 飛粋" text="ヨモギさん、隊長とどんな話をしてるのかな？" speaker_show="True" stop="True" voice="mh12001_01_0262" />
    <char_spine_animation obj_id="乱獅子 ゆら" body_anim_type="03_BackBothHands" loop="True" to_idle="False" />
    <msg speaker="乱獅子 ゆら" text="なーんか微妙に変な空気だったよな。" speaker_show="True" stop="True" voice="ry12002_01_0172" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="011_Facial_surprise" body_anim_type="07_ChestBothHands" loop="True" to_idle="False" />
    <msg speaker="宗近 飛粋" text="もしかして何かトラブルがあったとか…？" speaker_show="True" stop="True" voice="mh12001_01_0263" />
    <char_spine_animation obj_id="轟 葉栖美" body_anim_type="15_Negative" loop="False" to_idle="False" />
    <msg speaker="轟 葉栖美" text="ま、しぶきちに任せときゃ大丈夫だよ。&#xA;なんたってしぶきちは、アタシたちの隊長なんだから。" speaker_show="True" stop="True" voice="th12004_01_0131" />
    <msg_window_show show="False" />
    <fade_out time="1.0" type="Default" wait="True" />
