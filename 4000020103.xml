    <create type="Character" anchor="Bottom" obj_id="津守 ヨモギ" data_id="312005001" position_id="left" x="0" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="002_Facial_smile" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" />
    <msg speaker="津守 ヨモギ" text="ふっ…飛粋は、悪しき部分までは取り込まぬ&#xA;心の正しさを持っている、か。" speaker_show="True" stop="True" voice="ty12005_01_0102" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="003_Facial_laugh" body_anim_type="03_BackBothHands" loop="True" to_idle="False" />
    <msg speaker="津守 ヨモギ" text="しぶきめ、なかなか良い眼してるじゃねーか。" speaker_show="True" stop="True" voice="ty12005_01_0103" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="002_Facial_smile" body_anim_type="05_HipBothHands" loop="True" to_idle="False" />
    <msg speaker="津守 ヨモギ" text="それに、天衣無縫の素材を染めすぎると、せっかくの&#xA;逸材が平凡になるってのも、なかなかの見立てだ。" speaker_show="True" stop="True" voice="ty12005_01_0104" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="008_Facial_serious" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" />
    <msg speaker="津守 ヨモギ" text="さて、聞きたかった言葉も聞けたことだし、&#xA;あとはこっちで上層部の連中を黙らせるとするか。" speaker_show="True" stop="True" voice="ty12005_01_0105" />
