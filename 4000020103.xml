    <create type="Character" anchor="Bottom" obj_id="轟 葉栖美" data_id="312004002" position_id="left" x="300" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="008_Facial_serious" body_anim_type="14_Positive" loop="False" to_idle="False" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="002_Facial_smile" body_anim_type="03_BackBothHands" force_end="True" loop="True" to_idle="False" />
    <char_spine_animation obj_id="轟 葉栖美" face_anim_type="002_Facial_smile" body_anim_type="04_HipLeftHand" force_end="True" loop="True" to_idle="False" />
    <msg speaker="乱獅子 ゆら" text="あ、そういやさー、飛粋。&#xA;前から聞こうと思ってたんだけど…" speaker_show="True" stop="True" voice="ry12002_01_0173" />
    <char_spine_animation obj_id="乱獅子 ゆら" body_anim_type="13_Question" loop="True" to_idle="False" />
    <msg speaker="乱獅子 ゆら" text="お前って、なんで凪に入ったんだ？　お前くらい器用&#xA;なら、他にもなんだってできるだろうによ？" speaker_show="True" stop="True" voice="ry12002_01_0174" />
    <char_spine_animation obj_id="轟 葉栖美" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" />
    <char_spine_animation obj_id="乱獅子 ゆら" body_anim_type="05_HipBothHands" loop="True" to_idle="False" />
    <msg speaker="轟 葉栖美" text="そう言えば、アタシもちゃんと聞いたことないかも。&#xA;どうしてなんだい、飛粋ちゃん？" speaker_show="True" stop="True" voice="th12004_01_0132" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="002_Facial_smile" loop="True" to_idle="False" />
    <char_spine_animation obj_id="宗近 飛粋" body_anim_type="07_ChestBothHands" loop="False" to_idle="False" />
    <char_spine_animation obj_id="轟 葉栖美" body_anim_type="02_Idle" loop="True" to_idle="False" />
    <msg speaker="宗近 飛粋" text="うーん、改めて聞かれると難しいけど…悪を懲らしめる&#xA;のが、自分の運命だって感じたから、かな。" speaker_show="True" stop="True" voice="mh12001_01_0264" />
    <char_spine_animation obj_id="乱獅子 ゆら" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" />
    <msg speaker="乱獅子 ゆら" text="にしては、ちーと甘いんじゃねーのか？　自分で言う&#xA;のもなんだが、アタシ様を仲間に引き入れるとかよ。" speaker_show="True" stop="True" voice="ry12002_01_0175" />
    <char_spine_animation obj_id="轟 葉栖美" body_anim_type="05_HipBothHands" loop="True" to_idle="False" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="011_Facial_surprise" body_anim_type="13_Question" loop="True" to_idle="False" />
    <msg speaker="宗近 飛粋" text="え？　そうかな？&#xA;そんなことないと思うけど…？" speaker_show="True" stop="True" voice="mh12001_01_0265" />
    <char_spine_animation obj_id="乱獅子 ゆら" body_anim_type="15_Negative" loop="False" to_idle="False" />
    <msg speaker="乱獅子 ゆら" text="いや、お前のそういうとこは嫌いじゃねーけど…。" speaker_show="True" stop="True" voice="ry12002_01_0176" />
