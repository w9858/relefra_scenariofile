    <create type="Character" anchor="Bottom" obj_id="薩摩 しぶき" data_id="312003001" position_id="left" x="-200" />
    <create type="Character" anchor="Bottom" obj_id="津守 ヨモギ" data_id="312005001" position_id="left" x="200" />
    <char_spine_animation obj_id="薩摩 しぶき" face_anim_type="008_Facial_serious" body_anim_type="05_HipBothHands" force_end="True" loop="True" to_idle="False" />
    <msg speaker="薩摩 しぶき" text="で？　飛粋について話ってのはなんなんじゃ？" speaker_show="True" stop="True" voice="ss12003_01_0190" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="008_Facial_serious" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" />
    <msg speaker="津守 ヨモギ" text="凪の部隊を知る警察上層部の中に、悪い意味で飛粋の&#xA;動向に注目してる連中がいるみたいでな。" speaker_show="True" stop="True" voice="ty12005_01_0093" lip_sync_volume="0.03" />
    <char_spine_animation obj_id="津守 ヨモギ" body_anim_type="18_ArmsCrossed" loop="True" to_idle="False" />
    <msg speaker="津守 ヨモギ" text="今日、俺が上から呼び出しを受けたのも、&#xA;その件についてだったんだ。" speaker_show="True" stop="True" voice="ty12005_01_0094" lip_sync_volume="0.03" />
    <char_spine_animation obj_id="薩摩 しぶき" body_anim_type="13_Question" loop="True" to_idle="False" />
    <msg speaker="薩摩 しぶき" text="悪い意味で飛粋が注目されておるじゃと？&#xA;元・大八洲師団のゆらではなく、か？" speaker_show="True" stop="True" voice="ss12003_01_0191" />
    <char_spine_animation obj_id="津守 ヨモギ" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" />
    <msg speaker="津守 ヨモギ" text="飛粋がここの囚人たちからも技を学んでるって話を、&#xA;何処からか聞きつけたらしいぜ。" speaker_show="True" stop="True" voice="ty12005_01_0095" lip_sync_volume="0.03" />
    <msg speaker="津守 ヨモギ" text="スポンジのように何でも吸収する性質ゆえに、このまま&#xA;では余計なモノまで取り込んでしまうのではないか。" speaker_show="True" stop="True" voice="ty12005_01_0096" />
    <char_spine_animation obj_id="津守 ヨモギ" body_anim_type="03_BackBothHands" loop="True" to_idle="False" />
    <char_spine_animation obj_id="薩摩 しぶき" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" />
    <msg speaker="津守 ヨモギ" text="上に何人か、そういう危惧を抱いた者がいるそうだ。&#xA;ま、心配事をすんのが連中の仕事だからよ。" speaker_show="True" stop="True" voice="ty12005_01_0097" />
    <char_spine_animation obj_id="薩摩 しぶき" body_anim_type="11_Point" loop="True" to_idle="False" />
    <msg speaker="薩摩 しぶき" text="悪に触れている内に、悪に染まる。&#xA;つまりはそういうことかの？" speaker_show="True" stop="True" voice="ss12003_01_0192" />
    <char_spine_animation obj_id="津守 ヨモギ" body_anim_type="14_Positive" loop="False" to_idle="False" />
    <msg speaker="津守 ヨモギ" text="そうだ。だから今の内に飛粋を教育して、&#xA;スパイらしい冷徹さを持たせてはどうか…ってな。" speaker_show="True" stop="True" voice="ty12005_01_0098" />
    <char_spine_animation obj_id="津守 ヨモギ" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" />
    <char_spine_animation obj_id="薩摩 しぶき" body_anim_type="03_BackBothHands" loop="True" to_idle="False" />
    <msg speaker="津守 ヨモギ" text="もし飛粋が敵に寝返るようなことがあれば、&#xA;凪の部隊にとって脅威となるからな。" speaker_show="True" stop="True" voice="ty12005_01_0099" />
    <char_spine_animation obj_id="津守 ヨモギ" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" />
    <msg speaker="津守 ヨモギ" text="飛粋を今のままにしておくのか、&#xA;それとも、教育という枷を与えるのか…" speaker_show="True" stop="True" voice="ty12005_01_0100" />
    <char_spine_animation obj_id="津守 ヨモギ" body_anim_type="05_HipBothHands" loop="True" to_idle="False" />
    <msg speaker="津守 ヨモギ" text="お前はどう考える、しぶき？" speaker_show="True" stop="True" voice="ty12005_01_0101" />
    <char_spine_animation obj_id="薩摩 しぶき" body_anim_type="15_Negative" loop="False" to_idle="False" />
    <msg speaker="薩摩 しぶき" text="ふん、くだらない問いじゃのう。凪の部隊にとって&#xA;どちらが最良か。その答えは明白じゃろうが。" speaker_show="True" stop="True" voice="ss12003_01_0193" />
    <msg_window_show show="False" />
