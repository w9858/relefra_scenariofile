    <msg speaker="宗近 飛粋" text="なんで私がそんな大仕事をできるかっていうと&#xA;運動が、そこそこできるのと――。" speaker_show="True" stop="True" voice="mh12001_01_0241" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="003_Facial_laugh" loop="True" to_idle="False" />
