    <char_spine_animation obj_id="源 モモ" loop="True" to_idle="False" force_end="False" face_anim_type="003_Facial_laugh" />
    <msg speaker="源 モモ" text="……Ｚｚｚ" speaker_show="True" stop="True" voice="mm11001_01_0028" />
    <msg_window_show show="False" />
    <fade_out time="1.0" type="Default" wait="True" />
    <msg speaker="半蔵門 雪" text="（……やれやれ居眠りとは。&#xA;何だか私も眠くなってきた…。少し寝ていくか）" speaker_show="True" stop="True" voice="hy11002_01_0017" lip_sync="False" />
    <msg speaker="半蔵門 雪" text="（Ｚｚｚ）" speaker_show="True" stop="True" voice="hy11002_01_0018" lip_sync="False" />
    <msg window_type="SystemMsg" text="源モモと半蔵門雪。二人の関係はまだ&#xA;相変わらずのまま晩夏は過ぎていく――。" stop="True" />
