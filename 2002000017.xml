  <command>
    <Start />
    <load_cue_sheet cue_sheet="BGM/BGM12_Adv2" />
    <sound type="Bgm" cue_name="Adv2" />
    <fade_out time="0" type="Default" wait="False" />
    <bg show="True" file="21_island_01" />
    <fade_in time="1.0" type="Default" wait="True" />
    <telop text="無人島" in_time="0.5" show_time="0.5" out_time="0.5" wait="True" />
    <Comment comment="ゆらの服装は「大八洲師団服」変更予定" />
    <create type="Character" obj_id="乱獅子 ゆら" data_id="312002008" x="200" y="0" anchor="Bottom" position_id="left" />
    <create type="Character" obj_id="宗近 飛粋" data_id="312001001" x="-200" position_id="left" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="008_Facial_serious" body_anim_type="13_Question" force_end="False" loop="True" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="002_Facial_smile" body_anim_type="02_Idle" force_end="False" loop="True" />
    <msg speaker="乱獅子 ゆら" text="……しっかし想像もしてなかったぜ。&#xA;アタシ様が……大八洲をぬける道、か。" speaker_show="True" stop="True" voice="ry12002_01_0099" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="003_Facial_laugh" body_anim_type="09_PutHands" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="こっちに来るといいと思うよ。楽しいし！&#xA;私が自信をもって保証するよ。" speaker_show="True" stop="True" voice="mh12001_01_0170" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="005_Facial_sad" body_anim_type="05_HipBothHands" force_end="False" loop="True" />
    <msg speaker="乱獅子 ゆら" text="お前に保証されてもなー。&#xA;アタシ様とお前じゃ違うしよ。" speaker_show="True" stop="True" voice="ry12002_01_0100" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="002_Facial_smile" body_anim_type="06_ChestLeftHand" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="うん。でも、ゆらちゃんの境遇なら&#xA;それがいいかなって思うんだ。同じだから。" speaker_show="True" stop="True" voice="mh12001_01_0171" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="001_Facial_blink" body_anim_type="03_BackBothHands" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="私も特技をもってるんだ。それは&#xA;ある意味、親の影響が大きいと言うか。" speaker_show="True" stop="True" voice="mh12001_01_0172" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="001_Facial_blink" body_anim_type="04_HipLeftHand" force_end="False" loop="True" />
    <msg speaker="乱獅子 ゆら" text="変な奴だと思ってたらそうなのか。" speaker_show="True" stop="True" voice="ry12002_01_0101" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="016_Facial_smileBitter" body_anim_type="03_BackBothHands" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="うぅ、なんか凄い言われよう。私は他の人の&#xA;特技を100％でないにしろマネできるっていうか。" speaker_show="True" stop="True" voice="mh12001_01_0173" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="002_Facial_smile" body_anim_type="16_BendBackward" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="ゆらちゃんの動きも拝借してるんだよ。&#xA;ほらこの体の動かし方とか。" speaker_show="True" stop="True" voice="mh12001_01_0174" />
    <shake target="Character" obj_id="宗近 飛粋" x="50" vibrate="5" time="1.0" wait="True" y="0" />
    <wait time="0.5" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="003_Facial_laugh" body_anim_type="16_BendBackward" force_end="False" loop="True" />
    <shake target="Character" obj_id="乱獅子 ゆら" x="50" vibrate="5" time="1.0" wait="False" y="0" />
    <msg speaker="乱獅子 ゆら" text="あっ、本当だ！　紛れもなくアタシ様の動き。&#xA;お前スゲーな。スタァになれっぞ。" speaker_show="True" stop="True" voice="ry12002_01_0102" />
    <char_spine_animation obj_id="宗近 飛粋" body_anim_type="03_BackBothHands" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="ええとね、私はお父さんとお母さんは別に、&#xA;お父さんとお母さんがいるんだ。" speaker_show="True" stop="True" voice="mh12001_01_0175" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="016_Facial_smileBitter" body_anim_type="06_ChestLeftHand" force_end="False" loop="True" />
    <msg speaker="乱獅子 ゆら" text="なんか凄ぇ複雑そうな事言ってるな？&#xA;ちょっと待って頭を落ち着かせる。…よし来い。" speaker_show="True" stop="True" voice="ry12002_01_0103" />
    <char_spine_animation obj_id="宗近 飛粋" body_anim_type="07_ChestBothHands" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="国でね、強い人と強い人をかけあわせて、&#xA;強い子供を作る計画があったんだって。" speaker_show="True" stop="True" voice="mh12001_01_0176" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="001_Facial_blink" body_anim_type="11_Point" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="プランＡでは父親は登山家で母親は認知神経科学者。&#xA;その子供を大自然のゆりかごで育ててみる。" speaker_show="True" stop="True" voice="mh12001_01_0177" />
    <char_spine_animation obj_id="宗近 飛粋" body_anim_type="02_Idle" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="そんなコンセプトが私なんだって。&#xA;この部隊にスカウトされる時、聞いたんだ。" speaker_show="True" stop="True" voice="mh12001_01_0178" />
    <char_spine_animation obj_id="乱獅子 ゆら" body_anim_type="05_HipBothHands" force_end="False" loop="True" face_anim_type="005_Facial_sad" />
    <msg speaker="乱獅子 ゆら" text="はぁー。じゃ育てたのは実の両親じゃないと。&#xA;お前ショックだったか。" speaker_show="True" stop="True" voice="ry12002_01_0104" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="002_Facial_smile" body_anim_type="15_Negative" force_end="False" loop="False" to_idle="True" />
    <msg speaker="宗近 飛粋" text="驚いたけど。私を育ててくれた両親は&#xA;かわらず両親だし。平気だよ。" speaker_show="True" stop="True" voice="mh12001_01_0179" />
    <char_spine_animation obj_id="宗近 飛粋" body_anim_type="07_ChestBothHands" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="いつか、もう１人のお父さん達にも&#xA;あってみたいと思うけどね。" speaker_show="True" stop="True" voice="mh12001_01_0180" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="001_Facial_blink" body_anim_type="13_Question" force_end="False" loop="True" />
    <msg speaker="乱獅子 ゆら" text="そんなお前でも、警察では楽しく過ごせているって？" speaker_show="True" stop="True" voice="ry12002_01_0105" />
    <char_spine_animation obj_id="宗近 飛粋" body_anim_type="14_Positive" force_end="False" loop="False" to_idle="True" />
    <msg speaker="宗近 飛粋" text="うん。凪の部隊はね。私と同じように&#xA;特異な能力を持った人の集まりなんだ。" speaker_show="True" stop="True" voice="mh12001_01_0181" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="003_Facial_laugh" body_anim_type="11_Point" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="隊長は厳しさの中にある優しさが身にしみるし、&#xA;もう１人の先輩はお母さんのような暖かさ！" speaker_show="True" stop="True" voice="mh12001_01_0182" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="002_Facial_smile" body_anim_type="03_BackBothHands" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="あと言葉使いが独特なおばあちゃんとか。&#xA;あまり美味しくない、のどあめをくれるんだよ。" speaker_show="True" stop="True" voice="mh12001_01_0183" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="016_Facial_smileBitter" body_anim_type="04_HipLeftHand" force_end="False" loop="True" />
    <msg speaker="乱獅子 ゆら" text="最後のは嬉しくない気がするが。&#xA;でも面白そうだな。凪の部隊…。" speaker_show="True" stop="True" voice="ry12002_01_0106" />
    <char_spine_animation obj_id="宗近 飛粋" body_anim_type="09_PutHands" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="だからお互いの気持ちも理解しやすいし&#xA;素敵なところなんだよ。普段の学校生活も楽しいし。" speaker_show="True" stop="True" voice="mh12001_01_0184" />
    <char_spine_animation obj_id="乱獅子 ゆら" body_anim_type="13_Question" force_end="False" loop="True" face_anim_type="002_Facial_smile" />
    <msg speaker="乱獅子 ゆら" text="ふーん。お前ってそういえば年いくつなんだ。&#xA;アタシ様は高２ぐらいだけど。" speaker_show="True" stop="True" voice="ry12002_01_0107" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="003_Facial_laugh" body_anim_type="08_MouthBothHands" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="あ、そこも同じなんだね！　じゃあゆらちゃん&#xA;うちに来てくれれば同じクラスになるよ！" speaker_show="True" stop="True" voice="mh12001_01_0185" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="001_Facial_blink" body_anim_type="03_BackBothHands" force_end="False" loop="True" />
    <msg speaker="乱獅子 ゆら" text="へぇ～。でも学園生活なんて楽しいのかな？&#xA;退屈なだけじゃね？" speaker_show="True" stop="True" voice="ry12002_01_0108" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="002_Facial_smile" body_anim_type="11_Point" force_end="False" loop="True" />
    <msg speaker="宗近 飛粋" text="そうでもないよ。私が都内に来て&#xA;まず驚いたことはね～。" speaker_show="True" stop="True" voice="mh12001_01_0186" />
    <msg_window_show show="False" />
    <transition effect="Default" type="Out" color_change="True" time="0.5" wait="True" />
    <delete obj_id="乱獅子 ゆら" />
    <delete obj_id="宗近 飛粋" />
    <msg window_type="SystemMsg" text="飛粋とゆらの会話は、夜中まで弾み&#xA;２人はいつまでも語り続けた。そして深夜―" stop="True" />
    <msg_window_show show="False" />
    <bg file="21_islandni_01" />
    <transition effect="Default" type="In" color_change="True" time="0.5" wait="True" />
    <create type="Character" obj_id="乱獅子 ゆら" data_id="312002008" x="200" y="0" position_id="left" anchor="Bottom" />
    <create type="Character" obj_id="宗近 飛粋" data_id="312001001" x="-200" y="0" position_id="left" anchor="Bottom" />
    <char_spine_animation obj_id="宗近 飛粋" face_anim_type="003_Facial_laugh" body_anim_type="01_Stay" force_end="False" loop="True" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="001_Facial_blink" body_anim_type="02_Idle" force_end="False" loop="True" />
    <create_effect effect_id="hisui_sleep" effect_type="MampSleep" life_time="100" target_obj="宗近 飛粋" />
    <msg speaker="宗近 飛粋" text="すやぁ。Ｚｚｚｚ。" speaker_show="True" stop="True" voice="mh12001_01_0187" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="005_Facial_sad" body_anim_type="05_HipBothHands" force_end="False" loop="True" />
    <msg speaker="乱獅子 ゆら" text="アタシ様が隣にいるのに平然と寝てるし。&#xA;こいつが正義の味方で国は大丈夫なんかよ？" speaker_show="True" stop="True" voice="ry12002_01_0109" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="002_Facial_smile" body_anim_type="04_HipLeftHand" force_end="False" loop="True" />
    <msg speaker="乱獅子 ゆら" text="…まぁ今のアタシ様に殺気が無いのを&#xA;分かってるだけかもしれないけど、な。" speaker_show="True" stop="True" voice="ry12002_01_0110" />
    <char_spine_animation obj_id="乱獅子 ゆら" face_anim_type="003_Facial_laugh" body_anim_type="08_MouthBothHands" force_end="False" loop="True" />
    <create_effect effect_id="yura_sleep" effect_type="MampSleep" life_time="100" target_obj="乱獅子 ゆら" />
    <msg speaker="乱獅子 ゆら" text="妙な奴だよ……何だかこっちも平和ぼけで&#xA;眠くなって……きちまった……Ｚｚｚ。" speaker_show="True" stop="True" voice="ry12002_01_0111" />
    <msg_window_show show="False" />
    <fade_out time="1.0" type="Default" wait="True" />
  </command>
</adv>