    <char_spine_animation obj_id="薩摩 しぶき" face_anim_type="008_Facial_serious" body_anim_type="05_HipBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="薩摩 しぶき" text="昔、戦争で負けた時、それを受け入れられない&#xA;連中を集めて地下に潜った組織が大八洲師団じゃ。" speaker_show="True" stop="True" voice="ss12003_01_0139" />
    <char_spine_animation obj_id="轟 葉栖美" face_anim_type="008_Facial_serious" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="轟 葉栖美" text="はじめは大日本の復興が大義名分だったけど&#xA;時が経つに連れて、組織がねじれたみたい。" speaker_show="True" stop="True" voice="th12004_01_0086" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="008_Facial_serious" body_anim_type="18_ArmsCrossed" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="戦争知ってる奴等が死んでって恨みだけが&#xA;残って、ただ暴れる組織に成り果てたのさ。" speaker_show="True" stop="True" voice="ty12005_01_0060" />
    <char_spine_animation obj_id="津守 ヨモギ" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" force_end="False" />
    <char_spine_animation obj_id="薩摩 しぶき" face_anim_type="008_Facial_serious" loop="True" to_idle="True" force_end="False" />
    <char_spine_animation obj_id="薩摩 しぶき" body_anim_type="15_Negative" loop="False" to_idle="True" force_end="False" />
    <msg speaker="薩摩 しぶき" text="戦争時に実験中の薬品を頭から浴びたからか、&#xA;頭領の乱獅子原野も頭がおかしくなってるのじゃ。" speaker_show="True" stop="True" voice="ss12003_01_0140" />
    <char_spine_animation obj_id="轟 葉栖美" face_anim_type="005_Facial_sad" body_anim_type="07_ChestBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="轟 葉栖美" text="その乱獅子には娘が沢山居て、娘には薬品&#xA;かぶった父親の能力が遺伝してるらしいよ。" speaker_show="True" stop="True" voice="th12004_01_0087" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="008_Facial_serious" body_anim_type="14_Positive" loop="False" to_idle="True" force_end="False" />
    <msg speaker="津守 ヨモギ" text="つまり大八洲を相手にする時は乱獅子姓に&#xA;注意しろってこった。強敵だぜ。" speaker_show="True" stop="True" voice="ty12005_01_0061" />
    <char_spine_animation obj_id="轟 葉栖美" face_anim_type="008_Facial_serious" body_anim_type="03_BackBothHands" loop="True" to_idle="False" force_end="False" />
    <char_spine_animation obj_id="薩摩 しぶき" face_anim_type="008_Facial_serious" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" force_end="False" />
