    <telop text="港" in_time="0.5" show_time="0.5" out_time="0.5" wait="True" />
    <msg window_type="SystemMsg" text="ロボットは人間社会での運用が進んでおり&#xA;今では「人形」と呼ばれていた――。" stop="True" />
    <msg window_type="SystemMsg" text="人形は重労働の補佐、警備など人間を&#xA;助けるために開発が進められたが……。" stop="True" />
    <msg window_type="SystemMsg" text="その叡智を悪用する人間もいた。&#xA;一部のロボットは軍事に用いられている。" stop="True" />
    <msg speaker="密輸人１" text="よーしそのまま運び込め。&#xA;……おい、どうした何ボサッとしている。" speaker_show="True" stop="True" voice="99005_02_0001" />
    <msg speaker="密輸人２" text="あ、いや……その。" speaker_show="True" stop="True" voice="99006_02_0001" />
    <msg speaker="密輸人１" text="とっとと片付けちまおうぜ。警察は大丈夫&#xA;だろうけど、うるさい輩もいるからなぁ。" speaker_show="True" stop="True" voice="99005_02_0002" />
    <msg speaker="密輸人２" text="そ、空を何かがブワァーッて&#xA;飛んできたような……。あれは人形……？" speaker_show="True" stop="True" voice="99006_02_0002" />
    <msg speaker="密輸人１" text="あぁん？　お前クスリやってきたのか？" speaker_show="True" stop="True" voice="99005_02_0003" />
    <msg speaker="密輸人１" text="……って。え。本当に空、飛んでる？&#xA;飛行可能な人形って超ハイテクじゃねぇ？" speaker_show="True" stop="True" voice="99005_02_0004" />
    <msg_window_show show="False" />
    <transition effect="Default" type="Out" color_change="True" time="1.0" wait="True" />
    <bg file="42_skyni_01" />
    <create type="Character" obj_id="敷島 来夢" data_id="313001002" position_id="left" x="0" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="敷島 来夢" face_anim_type="002_Facial_smile" body_anim_type="23_bodyUnique" force_end="False" loop="True" />
    <transition effect="Default" type="In" color_change="True" time="1.0" wait="True" />
    <msg speaker="敷島 来夢" text="（ハタから見れば人形なんだけど、それは迷彩でね。&#xA;実は美人の敷島来夢様なんだなぁ、これが。）" speaker_show="True" stop="True" voice="sr13001_02_0131" lip_sync="False" />
    <msg speaker="敷島 来夢" text="（サーチ開始っと。おー良好良好。&#xA;さすが私が作った装置よね、と。）" speaker_show="True" stop="True" voice="sr13001_02_0132" lip_sync="False" />
    <char_spine_animation obj_id="敷島 来夢" face_anim_type="008_Facial_serious" force_end="False" loop="True" />
    <msg speaker="敷島 来夢" text="（……なるほどなるほど。違法に造られた人形の密輸。&#xA;しかも車輪にクスリまで隠して。ギルティ。）" speaker_show="True" stop="True" voice="sr13001_02_0133" lip_sync="False" />
    <msg_window_show show="False" />
    <transition effect="Default" type="Out" color_change="True" time="1.0" wait="True" />
    <delete obj_id="敷島 来夢" />
