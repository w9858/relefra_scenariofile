    <create type="Character" obj_id="敷島 来夢" data_id="313001002" position_id="left" x="0" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="敷島 来夢" face_anim_type="008_Facial_serious" body_anim_type="05_HipBothHands" force_end="False" loop="True" />
    <msg speaker="敷島 来夢" text="こらーっ、悪人ども、&#xA;中京圏での悪事はＺＥＴが許さないわよ。" speaker_show="True" stop="True" voice="sr13001_02_0134" />
    <msg speaker="密輸人３" text="ＺＥＴ！？　噂のハイテクマシンで&#xA;ムチャクチャやってくるって言うエージェント……。" speaker_show="True" stop="True" voice="99007_02_0001" />
    <char_spine_animation obj_id="敷島 来夢" face_anim_type="008_Facial_serious" body_anim_type="11_Point" force_end="False" loop="True" />
    <msg speaker="敷島 来夢" text="そのＺＥＴよ。ただ、ハイテクマシンではないわね。&#xA;これは無敵甲冑と呼ぶ。" speaker_show="True" stop="True" voice="sr13001_02_0135" />
    <char_spine_animation obj_id="敷島 来夢" face_anim_type="008_Facial_serious" body_anim_type="05_HipBothHands" force_end="False" loop="True" />
    <msg speaker="敷島 来夢" text="私が判決を言い渡すわ。貴方達は&#xA;入院六ヶ月プラス逮捕の刑って所かな。" speaker_show="True" stop="True" voice="sr13001_02_0136" />
    <msg speaker="密輸人３" text="ええい撃て撃て撃て撃て！！！！" speaker_show="True" stop="True" voice="99007_02_0002" />
    <sound type="Se" cue_name="DoolsMachinegun" />
    <wait time="0.5" />
    <sound type="Se" cue_name="DoolsMachinegun" />
    <wait time="0.5" />
    <sound type="Se" cue_name="DoolsMachinegun" />
    <wait time="0.5" />
    <msg speaker="密輸人２" text="あ、当たらない！？&#xA;あの人形、滅茶苦茶速い！！" speaker_show="True" stop="True" voice="99006_02_0003" />
    <char_spine_animation obj_id="敷島 来夢" face_anim_type="008_Facial_serious" body_anim_type="18_ArmsCrossed" force_end="False" loop="True" />
    <msg speaker="敷島 来夢" text="非致死性の拳銃とはいえ、死ぬほど&#xA;痛いから覚悟しなさい。" speaker_show="True" stop="True" voice="sr13001_02_0137" />
    <sound type="Se" cue_name="SuppressorGun" />
    <wait time="0.3" />
    <sound type="Se" cue_name="SuppressorGun" />
    <wait time="0.3" />
    <sound type="Se" cue_name="SuppressorGun" />
    <wait time="0.3" />
    <msg speaker="密輸人３" text="ぐわぁぁぁぁっ！" speaker_show="True" stop="True" voice="99007_02_0003" />
    <char_spine_animation obj_id="敷島 来夢" face_anim_type="018_Facial_smug" body_anim_type="05_HipBothHands" force_end="False" loop="True" />
    <msg speaker="敷島 来夢" text="んふっふっふ。悪人どもはこれぐらい&#xA;苦しんでくれないと。" speaker_show="True" stop="True" voice="sr13001_02_0138" />
    <msg speaker="密輸人１" text="お、お前警察じゃないんだろ？　だったらお前だって&#xA;悪人だ、勝手に判決とか言いやがって。" speaker_show="True" stop="True" voice="99005_02_0005" />
    <char_spine_animation obj_id="敷島 来夢" face_anim_type="001_Facial_blink" body_anim_type="11_Point" force_end="False" loop="True" />
    <msg speaker="敷島 来夢" text="ノンノン。私がやる事は全部正しいの。&#xA;貴方は口答えの罪で判決、電撃刑！" speaker_show="True" stop="True" voice="sr13001_02_0139" />
    <sound type="Se" cue_name="CutinTransmission" />
    <wait time="0.5" />
    <msg speaker="密輸人１" text="あばばばばば！！！！！&#xA;痺れ痺れ痺れる……！！" speaker_show="True" stop="True" voice="99005_02_0006" />
    <char_spine_animation obj_id="敷島 来夢" face_anim_type="001_Facial_blink" body_anim_type="18_ArmsCrossed" force_end="False" loop="True" />
    <msg speaker="敷島 来夢" text="さて、こいつらのデータもとって…。&#xA;任務完了。帰還しますか。" speaker_show="True" stop="True" voice="sr13001_02_0140" />
