  <command>
    <Start />
    <sound type="Bgm" cue_name="Adv1" />
    <bg show="True" file="02_wasabimo_001" resource_type="Background" />
    <fade_in time="0.5" wait="True" />
    <msg text="ある日、楓は一人、閉店後のWasabiを&#xD;&#xA;訪れていた。その目的は——" speaker_show="True" stop="True" window_type="SystemMsg" />
    <create type="Character" obj_id="カトリーナ" data_id="311009003" position_id="left" x="-200" y="0" anchor="Bottom" />
    <create type="Character" obj_id="相模 楓" data_id="311004006" position_id="left" x="200" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="カトリーナ" face_anim_type="001_Facial_blink" body_anim_type="04_HipLeftHand" force_end="False" loop="True" />
    <msg speaker="カトリーナ" text="疲労回復効果のあるカレーのレシピ？" speaker_show="True" stop="True" voice="kt11009_02_0357" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="008_Facial_serious" force_end="False" loop="True" />
    <char_spine_animation obj_id="相模 楓" body_anim_type="14_Positive" force_end="False" loop="False" />
    <msg speaker="相模 楓" text="はい！&#xA;師匠に作ってあげたいんです！" speaker_show="True" stop="True" voice="sf11004_02_0838" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="001_Facial_blink" body_anim_type="06_ChestLeftHand" force_end="False" loop="True" />
    <msg speaker="相模 楓" text="長い間モウリョウと闘ってきた師匠に、&#xA;何かできることはないかなって……" speaker_show="True" stop="True" voice="sf11004_02_0839" />
    <char_spine_animation obj_id="カトリーナ" face_anim_type="001_Facial_blink" body_anim_type="02_Idle" force_end="False" loop="True" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="005_Facial_sad" body_anim_type="07_ChestBothHands" force_end="False" loop="True" />
    <msg speaker="相模 楓" text="師匠、顔には全然出さないんですけど、&#xA;たぶん今まで、すごく大変だったと思うんです。" speaker_show="True" stop="True" voice="sf11004_02_0840" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="005_Facial_sad" body_anim_type="18_ArmsCrossed" force_end="False" loop="True" />
    <msg speaker="相模 楓" text="モウリョウとの闘いが終わった今も、財団の取り調べや&#xA;通常任務で、ゆっくり休む暇もないですし。" speaker_show="True" stop="True" voice="sf11004_02_0841" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="008_Facial_serious" body_anim_type="05_HipBothHands" force_end="False" loop="True" />
    <msg speaker="相模 楓" text="だから、せめて美味しくて元気の出るもの&#xA;作ってあげようと思って！" speaker_show="True" stop="True" voice="sf11004_02_0842" />
    <char_spine_animation obj_id="カトリーナ" face_anim_type="002_Facial_smile" body_anim_type="06_ChestLeftHand" force_end="False" loop="True" />
    <msg speaker="カトリーナ" text="そうね……。モウリョウの件では、&#xA;メイちゃん、本当によく頑張ってくれたわ。" speaker_show="True" stop="True" voice="kt11009_02_0358" />
    <char_spine_animation obj_id="カトリーナ" face_anim_type="005_Facial_sad" body_anim_type="18_ArmsCrossed" force_end="False" loop="True" />
    <msg speaker="カトリーナ" text="楓ちゃんにも、色々と辛い思いを&#xA;させちゃったわね……。" speaker_show="True" stop="True" voice="kt11009_02_0359" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="002_Facial_smile" body_anim_type="15_Negative" force_end="False" loop="False" />
    <msg speaker="相模 楓" text="いえ！ アタシと師匠の間には、何があっても崩れない&#xA;信頼関係があるので、全然大丈夫でした！" speaker_show="True" stop="True" voice="sf11004_02_0843" />
    <char_spine_animation obj_id="カトリーナ" face_anim_type="003_Facial_laugh" body_anim_type="14_Positive" force_end="False" loop="False" />
    <msg speaker="カトリーナ" text="ふふっ。そうね。" speaker_show="True" stop="True" voice="kt11009_02_0360" />
    <char_spine_animation obj_id="カトリーナ" body_anim_type="06_ChestLeftHand" force_end="False" loop="True" />
    <msg speaker="カトリーナ" text="それじゃ今日は特別に、カトリーナ特製&#xA;疲労回復カレーのレシピを教えてあげる。" speaker_show="True" stop="True" voice="kt11009_02_0361" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="003_Facial_laugh" body_anim_type="14_Positive" force_end="False" loop="False" />
    <msg speaker="相模 楓" text="はい！&#xA;よろしくお願いします！" speaker_show="True" stop="True" voice="sf11004_02_0844" />
    <char_spine_animation obj_id="カトリーナ" face_anim_type="002_Facial_smile" body_anim_type="04_HipLeftHand" force_end="False" loop="True" />
    <msg speaker="カトリーナ" text="まずは、スパイスね。基本のクミン、コリアンダー、&#xA;ターメリック、カルダモンに、ナツメグ、シナモン……" speaker_show="True" stop="True" voice="kt11009_02_0362" />
    <char_spine_animation obj_id="カトリーナ" face_anim_type="002_Facial_smile" body_anim_type="11_Point" force_end="False" loop="True" />
    <msg speaker="カトリーナ" text="疲労回復効果をプラスするなら、&#xA;ブラックペッパーとガーリックを効かせること。" speaker_show="True" stop="True" voice="kt11009_02_0363" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="008_Facial_serious" body_anim_type="07_ChestBothHands" force_end="False" loop="True" />
    <msg speaker="相模 楓" text="ふむふむ……メモメモ。" speaker_show="True" stop="True" voice="sf11004_02_0845" />
    <sound type="Se" />
    <Comment comment="【SE】メモを書く音" />
    <wait time="0.5" />
    <char_spine_animation obj_id="カトリーナ" face_anim_type="001_Facial_blink" body_anim_type="18_ArmsCrossed" force_end="False" loop="True" />
    <msg speaker="カトリーナ" text="ライスは雑穀米にすると、筋肉に蓄積された&#xA;乳酸が分解されて、疲労を軽減できるわ。" speaker_show="True" stop="True" voice="kt11009_02_0364" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="001_Facial_blink" body_anim_type="13_Question" force_end="False" loop="True" />
    <msg speaker="相模 楓" text="なるほど……&#xA;ハードな任務の後に良さそうですね。" speaker_show="True" stop="True" voice="sf11004_02_0846" />
    <char_spine_animation obj_id="カトリーナ" face_anim_type="001_Facial_blink" body_anim_type="04_HipLeftHand" force_end="False" loop="True" />
    <msg speaker="カトリーナ" text="具材は鶏肉、トマト、ナツメ、ハスの実、&#xA;干し椎茸、クコ、松の実、⾼麗人参……" speaker_show="True" stop="True" voice="kt11009_02_0365" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="002_Facial_smile" body_anim_type="08_MouthBothHands" force_end="False" loop="True" />
    <msg speaker="相模 楓" text="へー、スパイス以外の⽣薬も入れるんですか！" speaker_show="True" stop="True" voice="sf11004_02_0847" />
    <char_spine_animation obj_id="カトリーナ" face_anim_type="003_Facial_laugh" body_anim_type="11_Point" force_end="False" loop="True" />
    <msg speaker="カトリーナ" text="まだまだ、他にも色んな具材を入れるわよ。&#xA;はい、これが材料リスト。" speaker_show="True" stop="True" voice="kt11009_02_0366" />
    <sound type="Se" cue_name="Paper" />
    <Comment comment="【SE】ピラッと紙を渡す音" />
    <wait time="0.5" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="011_Facial_surprise" body_anim_type="16_BendBackward" force_end="False" loop="True" />
    <msg speaker="相模 楓" text="——！&#xA;こんなに……!?" speaker_show="True" stop="True" voice="sf11004_02_0848" />
    <char_spine_animation obj_id="カトリーナ" face_anim_type="002_Facial_smile" body_anim_type="06_ChestLeftHand" force_end="False" loop="True" />
    <msg speaker="カトリーナ" text="ええ。食材やスパイス、生薬は、適切に&#xA;組み合わせることで、より効果を発揮するの。" speaker_show="True" stop="True" voice="kt11009_02_0367" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="016_Facial_smileBitter" body_anim_type="07_ChestBothHands" force_end="False" loop="True" />
    <msg speaker="相模 楓" text="あの、ちなみにこれって……&#xA;一体おいくらまんえん……？" speaker_show="True" stop="True" voice="sf11004_02_0849" />
    <char_spine_animation obj_id="カトリーナ" face_anim_type="003_Facial_laugh" body_anim_type="11_Point" force_end="False" loop="True" />
    <msg speaker="カトリーナ" text="えーと……小鍋一杯で３万円くらいね。" speaker_show="True" stop="True" voice="kt11009_02_0368" />
    <char_spine_animation obj_id="相模 楓" face_anim_type="005_Facial_sad" body_anim_type="16_BendBackward" force_end="False" loop="True" />
    <msg speaker="相模 楓" text="⾼っ!?&#xA;うちじゃ無理ですッッッ!!!!" speaker_show="True" stop="True" voice="sf11004_02_0850" />
  </command>
