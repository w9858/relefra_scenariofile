    <Comment comment="商店街　昼" />
    <bg show="True" file="04_shopstreetmo_01" />
    <msg window_type="SystemMsg" text="ツキカゲと凪の部隊が共闘の意志を&#xA;確認した次の日。" stop="True" />
    <msg_window_show show="False" />
    <fade_in time="1.0" type="Default" wait="True" />
    <create type="Character" obj_id="津守 ヨモギ" data_id="312005001" position_id="left" x="0" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="002_Facial_smile" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="………。フッ梅子め。記憶を失っても&#xA;威勢がいいのはかわってねぇな。" speaker_show="True" stop="True" voice="ty12005_01_0005" />
    <msg_window_show show="False" />
    <move obj_id="津守 ヨモギ" position_id="left" x="200" x_move_type="MoveTo" time="0.5" wait="True" y="0" y_move_type="MoveValue" />
    <create type="Character" obj_id="源 モモ" data_id="311001006" position_id="left" x="-200" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="源 モモ" face_anim_type="002_Facial_smile" body_anim_type="13_Question" loop="True" to_idle="False" force_end="False" />
    <msg speaker="源 モモ" text="あれ？　津守……ヨモギさん。&#xA;こんにちは。" speaker_show="True" stop="True" voice="mm11001_01_0103" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="002_Facial_smile" body_anim_type="18_ArmsCrossed" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="ああそうか。ここは源モモの生活範囲か。&#xA;こんにちは。" speaker_show="True" stop="True" voice="ty12005_01_0006" />
    <char_spine_animation obj_id="源 モモ" face_anim_type="002_Facial_smile" body_anim_type="03_BackBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="何、ちょっと空崎に昔の戦友がいてね。" speaker_show="True" stop="True" voice="ty12005_01_0007" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="002_Facial_smile" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="昨日空崎に来て、どうにも懐かしくなっちまって。&#xA;顔を見にきたってわけだ。" speaker_show="True" stop="True" voice="ty12005_01_0008" />
    <char_spine_animation obj_id="源 モモ" face_anim_type="002_Facial_smile" body_anim_type="07_ChestBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="源 モモ" text="へぇ～色々お話できましたか？" speaker_show="True" stop="True" voice="mm11001_01_0104" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="002_Facial_smile" body_anim_type="02_Idle" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="んー……。まぁな。折角だし、お前とも&#xA;ちょっと話していいか？　飴やるからよ。" speaker_show="True" stop="True" voice="ty12005_01_0009" />
    <char_spine_animation obj_id="源 モモ" face_anim_type="002_Facial_smile" body_anim_type="14_Positive" loop="False" to_idle="False" force_end="False" />
    <msg speaker="源 モモ" text="ありがとうございますっ。………&#xA;………お、おぉ、なんだか渋い味ですね。" speaker_show="True" stop="True" voice="mm11001_01_0105" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="002_Facial_smile" body_anim_type="05_HipBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="ツキカゲの連中は、どの世代も目が&#xA;キラキラしてていいねぇ。育成がうまいんだろうな。" speaker_show="True" stop="True" voice="ty12005_01_0010" />
    <char_spine_animation obj_id="源 モモ" face_anim_type="011_Facial_surprise" body_anim_type="16_BendBackward" loop="True" to_idle="False" force_end="False" />
    <msg speaker="源 モモ" text="！？　他世代のツキカゲ、ご存じなんですか？" speaker_show="True" stop="True" voice="mm11001_01_0106" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="002_Facial_smile" body_anim_type="14_Positive" loop="False" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="あぁ。ずーーっと昔だけどな、一緒に戦った事がある。&#xA;そん時に色々あって、な。" speaker_show="True" stop="True" voice="ty12005_01_0011" />
    <char_spine_animation obj_id="源 モモ" face_anim_type="002_Facial_smile" body_anim_type="08_MouthBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="源 モモ" text="やっぱりツキカゲは歴史があるなぁ…。&#xA;ずっと先代のお話かぁ。" speaker_show="True" stop="True" voice="mm11001_01_0107" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="003_Facial_laugh" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="イカした奴等だったぜ。あの時から俺は&#xA;ツキカゲという組織を信頼してるんだ。" speaker_show="True" stop="True" voice="ty12005_01_0012" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="002_Facial_smile" body_anim_type="14_Positive" loop="False" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="だから、今回の凪の部隊とツキカゲの連合も同意した。" speaker_show="True" stop="True" voice="ty12005_01_0013" />
    <char_spine_animation obj_id="源 モモ" face_anim_type="008_Facial_serious" body_anim_type="07_ChestBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="源 モモ" text="（先輩達が築き上げてくれた信頼が&#xA;今に繋がっているんだ……）" speaker_show="True" stop="True" voice="mm11001_01_0108" lip_sync="False" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="008_Facial_serious" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="なにせ互いの情報をある程度教え合うわけだ。&#xA;よほどの所じゃないと、怖くて組めないだろ？" speaker_show="True" stop="True" voice="ty12005_01_0014" />
    <char_spine_animation obj_id="源 モモ" face_anim_type="008_Facial_serious" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="源 モモ" text="！　そうですよね。これから正義の連合、&#xA;その輪が広がればいいと思っていましたけど。" speaker_show="True" stop="True" voice="mm11001_01_0109" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="008_Facial_serious" body_anim_type="15_Negative" loop="False" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="軽々とは仲間を増やせねぇよ。情報渡したら&#xA;敵でした、寝返りました、なんて目もあてらんねぇ。" speaker_show="True" stop="True" voice="ty12005_01_0015" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="002_Facial_smile" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="しばらくは凪の部隊とツキカゲだけで&#xA;やってくしかねぇな。" speaker_show="True" stop="True" voice="ty12005_01_0016" />
    <char_spine_animation obj_id="源 モモ" face_anim_type="003_Facial_laugh" body_anim_type="09_PutHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="源 モモ" text="はい。滾っていきます！　私は、父が警察だったので&#xA;警察の人とお仕事出来るの、嬉しいんです。" speaker_show="True" stop="True" voice="mm11001_01_0110" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="008_Facial_serious" body_anim_type="13_Question" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="（……源昌の事か。調べたら色々と複雑な事件だった。&#xA;いつかこの娘は、それと向かい合っていくのだろう）" speaker_show="True" stop="True" voice="ty12005_01_0017" lip_sync="False" />
    <char_spine_animation obj_id="源 モモ" face_anim_type="002_Facial_smile" body_anim_type="03_BackBothHands" loop="True" to_idle="False" force_end="False" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="005_Facial_sad" body_anim_type="12_DropShoulders" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="昨日はこっちの薩摩が厳しい事を&#xA;言っちまって、ちょいとすまなかったが。" speaker_show="True" stop="True" voice="ty12005_01_0018" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="002_Facial_smile" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="任務を重ねていくうちに、互いが&#xA;好きになりゃいいやと思ってる。" speaker_show="True" stop="True" voice="ty12005_01_0019" />
    <char_spine_animation obj_id="源 モモ" face_anim_type="003_Facial_laugh" body_anim_type="14_Positive" loop="False" to_idle="False" force_end="False" />
    <msg speaker="源 モモ" text="はい、私もそう思います。" speaker_show="True" stop="True" voice="mm11001_01_0111" />
    <char_spine_animation obj_id="津守 ヨモギ" face_anim_type="002_Facial_smile" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="津守 ヨモギ" text="ん。今後ともよろしくな。" speaker_show="True" stop="True" voice="ty12005_01_0020" />
  </command>
