    <Comment comment="クルーザー" />
    <bg show="True" file="33_cruiserni_01" />
    <msg window_type="SystemMsg" text="東京湾に浮かぶクルーザー。&#xA;ここは大八洲師団、乱獅子しおんのアジトである。" stop="True" />
    <msg_window_show show="False" />
    <fade_in time="1.0" type="Default" wait="True" />
    <msg speaker="大八洲兵１" text="しおんちゃん。リザード社のクリッシー・ガオが&#xA;到着したようです。" speaker_show="True" stop="True" voice="99005_01_0001" />
    <create type="Character" obj_id="乱獅子 しおん" data_id="315003001" position_id="left" x="0" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="乱獅子 しおん" face_anim_type="003_Facial_laugh" body_anim_type="05_HipBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="乱獅子 しおん" text="おー！　そうかそうか。&#xA;じゃあ一緒にお出迎えしようかサエミー。" speaker_show="True" stop="True" voice="rs15003_01_0001" />
    <move obj_id="乱獅子 しおん" position_id="left" x="200" x_move_type="MoveTo" time="0.5" wait="True" y="0" y_move_type="MoveValue" />
    <create type="Character" obj_id="刑部 冴魅" data_id="317001001" position_id="left" x="-200" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="刑部 冴魅" face_anim_type="008_Facial_serious" body_anim_type="02_Idle" loop="True" to_idle="False" force_end="False" />
    <msg speaker="刑部 冴魅" text="配下にちゃん付けで呼ばせているのかお前。&#xA;大八洲師団はフランクだな。" speaker_show="True" stop="True" voice="os17001_01_0001" />
    <char_spine_animation obj_id="乱獅子 しおん" face_anim_type="002_Facial_smile" body_anim_type="15_Negative" loop="False" to_idle="False" force_end="False" />
    <msg speaker="乱獅子 しおん" text="アタシは堅苦しいのが苦手でねー。&#xA;皆と愉快に楽しくやりたいんだよ。" speaker_show="True" stop="True" voice="rs15003_01_0002" />
    <msg_window_show show="False" />
    <delete obj_id="乱獅子 しおん" />
    <delete obj_id="刑部 冴魅" />
    <create type="Character" obj_id="クリッシー" data_id="316001001" position_id="left" x="1000" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="クリッシー" face_anim_type="003_Facial_laugh" body_anim_type="03_BackBothHands" loop="True" to_idle="False" force_end="False" />
    <move obj_id="クリッシー" position_id="left" x="0" x_move_type="MoveTo" time="1.5" wait="True" y="0" y_move_type="MoveValue" />
    <msg speaker="クリッシー" text="～♪" speaker_show="True" stop="True" voice="ks16001_01_0001" lip_sync="False" />
    <delete obj_id="クリッシー" />
    <create type="Character" obj_id="乱獅子 しおん" data_id="315003001" position_id="left" x="0" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="乱獅子 しおん" face_anim_type="002_Facial_smile" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" />
    <msg speaker="乱獅子 しおん" text="やぁやぁ！　我が船へウェルカム！&#xA;クリッシー・ガオ！　シャンパンはどうだい。" speaker_show="True" stop="True" voice="rs15003_01_0003" />
    <char_spine_animation obj_id="乱獅子 しおん" face_anim_type="001_Facial_blink" body_anim_type="06_ChestLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="乱獅子 しおん" text="リザードの若きエースに会えるなんて&#xA;光栄だねぇ。活躍は耳にしているよ。" speaker_show="True" stop="True" voice="rs15003_01_0004" />
    <move obj_id="乱獅子 しおん" position_id="left" x="-300" x_move_type="MoveTo" time="0.5" wait="True" y="0" y_move_type="MoveValue" />
    <create type="Character" obj_id="クリッシー" data_id="316001001" position_id="left" x="300" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="クリッシー" face_anim_type="003_Facial_laugh" body_anim_type="09_PutHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="クリッシー" text="ドーモ。素敵な夜景デスね。こんな場所アメリカには&#xA;１００個ぐらいデス。ジパングの印象は…まぁフツー。" speaker_show="True" stop="True" voice="ks16001_01_0002" />
    <char_spine_animation obj_id="乱獅子 しおん" face_anim_type="003_Facial_laugh" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" />
    <msg speaker="乱獅子 しおん" text="聞いたかいサエミー。初対面なのに、凄く好戦的な&#xA;態度。嬉しいねぇ手を組むならこういう人でないと。" speaker_show="True" stop="True" voice="rs15003_01_0005" />
    <char_spine_animation obj_id="クリッシー" face_anim_type="001_Facial_blink" body_anim_type="03_BackBothHands" loop="True" to_idle="False" force_end="False" />
    <char_spine_animation obj_id="乱獅子 しおん" face_anim_type="001_Facial_blink" body_anim_type="05_HipBothHands" loop="True" to_idle="False" force_end="False" />
    <move obj_id="クリッシー" position_id="left" x="400" x_move_type="MoveTo" time="0.5" wait="False" y="0" y_move_type="MoveValue" />
    <move obj_id="乱獅子 しおん" position_id="left" x="-150" x_move_type="MoveTo" time="0.5" wait="True" y="0" y_move_type="MoveValue" />
    <create type="Character" obj_id="刑部 冴魅" data_id="317001001" position_id="left" x="-400" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="刑部 冴魅" face_anim_type="008_Facial_serious" body_anim_type="15_Negative" loop="False" to_idle="False" force_end="False" />
    <msg speaker="刑部 冴魅" text="だが約束の時間に五分も遅刻しているぞ。リザードは&#xA;この程度のビジネス感覚なのか？　大企業のくせに。" speaker_show="True" stop="True" voice="os17001_01_0002" />
    <char_spine_animation obj_id="クリッシー" face_anim_type="101_Facial_trouble" body_anim_type="16_BendBackward" loop="True" to_idle="False" force_end="False" />
    <msg speaker="クリッシー" text="アーオ。失礼。倶楽部トリムヘイムの執事さんは流石、&#xA;厳しいデス。だからこそ顧客に信頼されてるのデスね。" speaker_show="True" stop="True" voice="ks16001_01_0003" />
    <char_spine_animation obj_id="乱獅子 しおん" face_anim_type="008_Facial_serious" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" force_end="False" />
    <char_spine_animation obj_id="クリッシー" face_anim_type="002_Facial_smile" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" />
    <msg speaker="クリッシー" text="実はここに来る時にマウスを&#xA;捕まえていたもので。港からこの船見張ってマシタ。" speaker_show="True" stop="True" voice="ks16001_01_0004" />
    <delete obj_id="乱獅子 しおん" />
    <delete obj_id="刑部 冴魅" />
    <delete obj_id="クリッシー" />
    <msg speaker="モウリョウの人間" text="ぐっ…放してくれ。俺はモウリョウの…いわば&#xA;こっち側の人間だ。警察や私設情報機関とは違う。" speaker_show="True" stop="True" voice="99006_01_0001" />
    <create type="Character" obj_id="乱獅子 しおん" data_id="315003001" position_id="left" x="200" y="0" anchor="Bottom" />
    <create type="Character" obj_id="刑部 冴魅" data_id="317001001" position_id="left" x="-200" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="刑部 冴魅" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" force_end="False" />
    <char_spine_animation obj_id="乱獅子 しおん" face_anim_type="003_Facial_laugh" body_anim_type="14_Positive" loop="False" to_idle="False" force_end="False" />
    <msg speaker="乱獅子 しおん" text="おーっ、確かにモウリョウの指輪してるね。&#xA;イカしたやつ。" speaker_show="True" stop="True" voice="rs15003_01_0006" />
    <msg speaker="刑部 冴魅" text="それが何故この船を見張っていたのだ？&#xA;答えてもらおうか。" speaker_show="True" stop="True" voice="os17001_01_0003" />
    <delete obj_id="乱獅子 しおん" />
    <delete obj_id="刑部 冴魅" />
    <msg speaker="モウリョウの人間" text="驚いたからだ。大八洲師団が所有する船に、&#xA;あの倶楽部トリムヘイムの執事が乗り込み…。" speaker_show="True" stop="True" voice="99006_01_0002" />
    <msg speaker="モウリョウの人間" text="さらにはアメリカの大組織・リザード社の&#xA;クリッシー・ガオまで船に向かっている。" speaker_show="True" stop="True" voice="99006_01_0003" />
    <msg speaker="モウリョウの人間" text="大八洲師団、リザード社、倶楽部トリムヘイム。&#xA;これだけの大組織が一同に揃って何を考えている。" speaker_show="True" stop="True" voice="99006_01_0004" />
    <create type="Character" obj_id="乱獅子 しおん" data_id="315003001" position_id="left" x="0" y="0" anchor="Bottom" />
    <create type="Character" obj_id="刑部 冴魅" data_id="317001001" position_id="left" x="-300" y="0" anchor="Bottom" />
    <create type="Character" obj_id="クリッシー" data_id="316001001" position_id="left" x="300" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="クリッシー" face_anim_type="002_Facial_smile" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" force_end="False" />
    <char_spine_animation obj_id="乱獅子 しおん" body_anim_type="05_HipBothHands" loop="True" to_idle="False" force_end="False" face_anim_type="003_Facial_laugh" />
    <char_spine_animation obj_id="刑部 冴魅" body_anim_type="02_Idle" loop="True" to_idle="False" force_end="False" />
    <msg speaker="乱獅子 しおん" text="あははっ。ボロボロにされても流石は世界規模の&#xA;犯罪組織モウリョウ。まだ元気な部分もあるんだなぁ。" speaker_show="True" stop="True" voice="rs15003_01_0007" />
    <char_spine_animation obj_id="クリッシー" face_anim_type="003_Facial_laugh" body_anim_type="07_ChestBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="クリッシー" text="シンプルな事デスよ。モウリョウの人。&#xA;この集いはビジネスで言えば提携。" speaker_show="True" stop="True" voice="ks16001_01_0005" />
    <char_spine_animation obj_id="刑部 冴魅" face_anim_type="008_Facial_serious" body_anim_type="02_Idle" loop="True" to_idle="False" force_end="False" />
    <msg speaker="刑部 冴魅" text="お前達モウリョウが壊滅し……我らが勢力を&#xA;伸ばす好機が来ているのだ。" speaker_show="True" stop="True" voice="os17001_01_0004" />
    <char_spine_animation obj_id="刑部 冴魅" body_anim_type="15_Negative" loop="False" to_idle="False" force_end="False" />
    <msg speaker="刑部 冴魅" text="しかし警察や私設情報機関の連中は侮れない。&#xA;あの天堂久良羅を倒したというのだから。" speaker_show="True" stop="True" voice="os17001_01_0005" />
    <char_spine_animation obj_id="乱獅子 しおん" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" face_anim_type="002_Facial_smile" />
    <msg speaker="乱獅子 しおん" text="個々に動いても効率悪そうでさ。なら手を&#xA;組んじゃえばいい。そして邪魔者を滅する。" speaker_show="True" stop="True" voice="rs15003_01_0008" />
    <char_spine_animation obj_id="クリッシー" body_anim_type="03_BackBothHands" loop="True" to_idle="False" force_end="False" face_anim_type="002_Facial_smile" />
    <msg speaker="クリッシー" text="他の組織にも声をかけていますヨ。いまだかつてない&#xA;悪の連合！　ワタシ、ベリーベリー興奮してきますね！" speaker_show="True" stop="True" voice="ks16001_01_0006" />
    <char_spine_animation obj_id="乱獅子 しおん" body_anim_type="09_PutHands" loop="True" to_idle="False" force_end="False" face_anim_type="003_Facial_laugh" />
    <msg speaker="乱獅子 しおん" text="さようならモウリョウ。このまま伝説の&#xA;組織となってくれ。後はアタシ達に任せてさ。" speaker_show="True" stop="True" voice="rs15003_01_0009" />
    <char_spine_animation obj_id="乱獅子 しおん" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" face_anim_type="002_Facial_smile" />
    <char_spine_animation obj_id="クリッシー" body_anim_type="07_ChestBothHands" loop="True" to_idle="False" force_end="False" />
    <char_spine_animation obj_id="刑部 冴魅" face_anim_type="008_Facial_serious" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg speaker="乱獅子 しおん" text="とりあえずは、アンタ達の縄張りだった&#xA;空崎は、アタシ達がもらうよ。" speaker_show="True" stop="True" voice="rs15003_01_0010" />
    <delete obj_id="乱獅子 しおん" />
    <delete obj_id="刑部 冴魅" />
    <delete obj_id="クリッシー" />
    <msg speaker="モウリョウの人間" text="な、何をする気だ。おいやめろ。" speaker_show="True" stop="True" voice="99006_01_0005" />
    <create type="Character" obj_id="乱獅子 しおん" data_id="315003001" position_id="left" x="0" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="乱獅子 しおん" body_anim_type="09_PutHands" loop="True" to_idle="False" force_end="False" face_anim_type="003_Facial_laugh" />
    <msg speaker="乱獅子 しおん" text="やーアタシのペットが腹を空かせているんだよ&#xA;可哀想に。そしたら丁度いいオヤツがきたから、さ。" speaker_show="True" stop="True" voice="rs15003_01_0011" />
    <msg_window_show show="False" />
    <sound type="Se" cue_name="Clash" />
    <wait time="1.0" />
    <msg speaker="モウリョウの人間" text="や、やめてくれ、う、うわぁーっ！" speaker_show="True" stop="True" voice="99006_01_0006" />
    <msg_window_show show="False" />
    <wait time="0.5" />
    <sound type="Se" cue_name="Dobon" />
    <wait time="1.5" />
    <create type="Character" obj_id="クリッシー" data_id="316001001" position_id="left" x="300" y="0" anchor="Bottom" />
    <create type="Character" obj_id="刑部 冴魅" data_id="317001001" position_id="left" x="-300" y="0" anchor="Bottom" />
    <char_spine_animation obj_id="刑部 冴魅" body_anim_type="02_Idle" loop="True" to_idle="False" force_end="False" />
    <char_spine_animation obj_id="クリッシー" face_anim_type="003_Facial_laugh" body_anim_type="08_MouthBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="クリッシー" text="シャーク！　ハハハッ！　マーベラス！&#xA;シャークに襲われていますよ！" speaker_show="True" stop="True" voice="ks16001_01_0007" />
    <char_spine_animation obj_id="乱獅子 しおん" face_anim_type="002_Facial_smile" body_anim_type="11_Point" loop="True" to_idle="False" force_end="False" />
    <msg speaker="乱獅子 しおん" text="それじゃあアタシ達も楽しい御飯にしようか。&#xA;話し合おうよ。いかに正義の連中を始末するか。" speaker_show="True" stop="True" voice="rs15003_01_0012" />
    <char_spine_animation obj_id="刑部 冴魅" body_anim_type="14_Positive" loop="False" to_idle="False" force_end="False" />
    <msg speaker="刑部 冴魅" text="まぁいいだろう。全ては倶楽部の顧客に&#xA;快適な狩りの空間を提供するため…。" speaker_show="True" stop="True" voice="os17001_01_0006" />
    <delete obj_id="クリッシー" />
    <delete obj_id="乱獅子 しおん" />
    <move obj_id="刑部 冴魅" position_id="left" x="0" x_move_type="MoveTo" time="0.5" wait="True" y="0" y_move_type="MoveValue" />
    <char_spine_animation obj_id="刑部 冴魅" body_anim_type="04_HipLeftHand" loop="True" to_idle="False" force_end="False" />
    <msg window_type="SystemMsg" text="倶楽部トリムヘイム。人間を狩猟する事を趣味とした&#xA;者が集う会員制の組織である。拠点はヨーロッパ。" stop="True" />
    <delete obj_id="刑部 冴魅" />
    <create type="Character" obj_id="クリッシー" data_id="316001001" x="0" y="0" anchor="Bottom" position_id="left" />
    <char_spine_animation obj_id="クリッシー" face_anim_type="002_Facial_smile" body_anim_type="09_PutHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="クリッシー" text="楽しい余興でした。アメリカ人はシャークに目が&#xA;ないんデス！　さ、手を取り合い仲良くしましょ。" speaker_show="True" stop="True" voice="ks16001_01_0008" />
    <char_spine_animation obj_id="クリッシー" body_anim_type="03_BackBothHands" loop="True" to_idle="False" force_end="False" />
    <msg window_type="SystemMsg" text="リザード。米国に本拠地がある「人形」の取り扱いを&#xA;主とする企業。裏で軍事用の人形を大量生産。" stop="True" />
    <delete obj_id="クリッシー" />
    <create type="Character" obj_id="乱獅子 しおん" data_id="315003001" x="0" anchor="Bottom" y="0" />
    <char_spine_animation obj_id="乱獅子 しおん" face_anim_type="003_Facial_laugh" body_anim_type="05_HipBothHands" loop="True" to_idle="False" force_end="False" />
    <msg speaker="乱獅子 しおん" text="今後が楽しみだなぁ。わくわくするなぁ。&#xA;どんないけない事をしてやろうか。" speaker_show="True" stop="True" voice="rs15003_01_0013" />
  </command>
